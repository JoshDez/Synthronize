<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/dark_purple_2"
    android:orientation="vertical">

    <Space
        android:id="@+id/upperSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/option1"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/optionIcon1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            app:tint="@color/light_purple"/>

        <TextView
            android:id="@+id/optiontitle1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:contentDescription="@string/menuoption"
            android:textColor="@color/light_purple"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option2"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/optionIcon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            app:tint="@color/light_purple"/>

        <TextView
            android:id="@+id/optiontitle2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:contentDescription="@string/menuoption"
            android:textColor="@color/light_purple"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option3"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/optionIcon3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            app:tint="@color/light_purple"/>

        <TextView
            android:id="@+id/optiontitle3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:contentDescription="@string/menuoption"
            android:textColor="@color/light_purple"
            android:textSize="17sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/option4"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/optionIcon4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            app:tint="@color/light_purple"/>

        <TextView
            android:id="@+id/optiontitle4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:contentDescription="@string/menuoption"
            android:textColor="@color/light_purple"
            android:textSize="17sp"/>
    </LinearLayout>


    <Space
        android:id="@+id/lowerSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>