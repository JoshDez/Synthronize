<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_rounded_corners"
        android:backgroundTint="@color/dark_purple_1"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileCIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_not_selected"/>

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userProfileCIV"
            android:layout_toLeftOf="@id/timestampTV"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:text="Josh Dez"
            android:textColor="@color/light_purple"/>

        <TextView
            android:id="@+id/timestampTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="10dp"
            android:text="Jun 12"
            android:textColor="@color/light_purple"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/input_rounded_corners"
            android:layout_toRightOf="@id/userProfileCIV"
            android:layout_marginStart="8dp"
            android:layout_below="@id/userNameTV"
            android:backgroundTint="@color/purple2"
            android:layout_marginEnd="5dp">
            <TextView
                android:id="@+id/commentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment"
                android:textColor="@color/light_purple"
                android:textSize="17sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>