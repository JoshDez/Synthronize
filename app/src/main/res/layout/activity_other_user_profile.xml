<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/dark_purple_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherUserProfile">

    <RelativeLayout
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/dark_purple_2"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_icon"
            app:tint="@color/light_purple" />

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/search_icon"
            android:contentDescription="@string/Search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/light_purple" />
    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/mainToolbar"
        android:background="@color/light_purple"
        app:dividerColor="@color/light_purple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/divider"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_below="@id/divider"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userCoverIV"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@color/black"/>


                    <LinearLayout
                        android:id="@+id/postsContainer"
                        android:layout_below="@id/userCoverIV"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/communitiesContainer"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/postsCountTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="120"
                            android:textStyle="bold"
                            android:textColor="@color/light_purple"/>
                        <TextView
                            android:id="@+id/postsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="Posts"
                            android:textColor="@color/light_purple"/>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/communitiesContainer"
                        android:layout_below="@id/userCoverIV"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/communitiesCountTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="120"
                            android:textColor="@color/light_purple"/>
                        <TextView
                            android:id="@+id/communitiesTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="Communities"
                            android:textColor="@color/light_purple"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/friendsContainer"
                        android:layout_below="@id/userCoverIV"
                        android:layout_toLeftOf="@id/achievementsContainer"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/friendsCountTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="120"
                            android:textColor="@color/light_purple"/>
                        <TextView
                            android:id="@+id/friendsTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="Friends"
                            android:textColor="@color/light_purple"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/achievementsContainer"
                        android:layout_below="@id/userCoverIV"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/achievementsCountTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="120"
                            android:textColor="@color/light_purple"/>
                        <TextView
                            android:id="@+id/achievementsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="Achievements"
                            android:textColor="@color/light_purple"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfileCIV"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerInParent="true"
                        android:src="@color/light_purple"/>



                    <TextView
                        android:id="@+id/userDisplayNameTV"
                        android:layout_below="@id/userProfileCIV"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/full_name"
                        android:textAlignment="center"
                        android:textColor="@color/light_purple"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/userNameTV"
                        android:layout_below="@id/userDisplayNameTV"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/username"
                        android:textAlignment="center"
                        android:textColor="@color/light_purple"
                        android:textSize="16sp"/>

                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/userDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="#00FFFFFF"
                android:text="@string/user_description"
                android:textAlignment="center"
                android:textColor="@color/light_purple"
                android:backgroundTint="#00FFFFFF"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_friend"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/messageUserBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_user"/>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/mainToolbar"
                android:background="@color/light_purple"
                app:dividerColor="@color/light_purple" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Posts"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Files"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Likes"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>