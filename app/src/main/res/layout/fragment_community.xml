<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple_2"
    tools:context=".CommunityFragment">

    <!-- Navigation -->
    <LinearLayout
        android:id="@+id/communityNavigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark_purple_1"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/feedsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/feeds"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/events"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forumsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/forums"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marketTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/market"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/files"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- RecyclerView for Posts -->
    <FrameLayout
        android:id="@+id/communityFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/communityNavigation"/>


</RelativeLayout>
