<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatroomLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userCircleImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profile_not_selected"/>
    <TextView
        android:id="@+id/chatroomNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:textSize="17dp"
        android:text="FULLNAME"
        android:textColor="@color/light_purple"
        android:layout_above="@id/lastUserMessageTV"
        android:layout_toRightOf="@id/userCircleImageView"/>
    <TextView
        android:id="@+id/lastUserMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:textSize="15dp"
        android:text="Josh: asldkasdlfflakksd"
        android:textColor="@color/light_purple"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/userCircleImageView"/>
    <TextView
        android:id="@+id/lastTimestampTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:textSize="15dp"
        android:text="Tue:12PM"
        android:textColor="@color/light_purple"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>