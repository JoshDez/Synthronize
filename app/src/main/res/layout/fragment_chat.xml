<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment">

    <LinearLayout
        android:id="@+id/upperNavLayout"
        android:orientation="horizontal"
        android:background="@color/dark_purple_1"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/inboxBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/inbox"
            android:gravity="center"
            android:background="@color/dark_purple_1"
            android:textColor="@color/light_purple"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"/>

        <TextView
            android:id="@+id/communityChatsBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/community_chats"
            android:textColor="@color/less_saturated_light_purple"
            android:background="@color/dark_purple_1"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"/>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inboxRV"
        android:layout_below="@id/upperNavLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/communityChatsRV"
        android:visibility="gone"
        android:layout_below="@id/upperNavLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>