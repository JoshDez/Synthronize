<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple_2"
    tools:context=".CommunitySettings">


    <RelativeLayout
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/dark_purple_2"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true">
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back_icon"
                app:tint="@color/light_purple" />
            <TextView
                android:id="@+id/toolbarTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="25dp"
                android:textColor="@color/light_purple"
                android:text="Community Settings"/>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mainToolbar"
        app:dividerColor="@color/light_purple" />

    <LinearLayout
        android:id="@+id/navigationLayout"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_below="@id/divider"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/dark_purple_1"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="@string/general"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_purple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="@string/admin"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_below="@id/divider"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userCoverIV"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@color/black"/>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfileCIV"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerInParent="true"
                        android:src="@color/light_purple"/>



                    <TextView
                        android:id="@+id/communityNameTV"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@id/userProfileCIV"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@string/full_name"
                        android:textAlignment="center"
                        android:textColor="@color/light_purple"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/communityDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#00FFFFFF"
                android:drawableTint="#00FFFFFF"
                android:contentDescription="@string/user_description"
                android:textAlignment="center"
                android:textColor="@color/light_purple"
                android:textSize="17sp" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#00FFFFFF"
                android:drawableTint="#00FFFFFF"
                android:contentDescription="@string/user_description"
                android:textAlignment="center"
                android:text="@string/community_code"
                android:textColor="@color/light_purple"
                android:textSize="15sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <EditText
                    android:id="@+id/communityCodeEdtTxt"
                    android:layout_width="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/light_purple"
                    android:contentDescription="@string/community_code"
                    android:textAlignment="center"
                    android:textColor="@color/light_purple"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/copyCodeBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_content_copy_24"
                    android:background="#00D0ADF1"
                    android:layout_toLeftOf="@id/addFriendBtn"
                    app:tint="@color/light_purple"/>


            </LinearLayout>







        </LinearLayout>
    </ScrollView>

</RelativeLayout>